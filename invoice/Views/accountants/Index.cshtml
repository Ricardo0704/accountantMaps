@model IEnumerable<invoice.Models.accountant>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }

        tr:nth-child(even) {
            background-color: #E0FFFF;
        }

        tr:nth-child(odd) {
            background-color: #E0FFFF;
        }

        th {
            background-color: #6495ED;
            color: white;
        }
    </style>
</head>
<body>
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Insurance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.mobileCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telephoneCost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.electricity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.rent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.officeSupplies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sanitarySupplies)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.month)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Insurance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.mobileCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telephoneCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.electricity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.rent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.officeSupplies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sanitarySupplies)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.month)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.id })
                </td>
            </tr>
        }

    </table>
