@model IEnumerable<invoice.Models.maintain>

@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <style>
        table, th, td {
            border: 1px solid black;
        }

        tr:nth-child(even) {
            background-color: #E0FFFF;
        }

        tr:nth-child(odd) {
            background-color: #E0FFFF;
        }

        th {
            background-color: #6495ED;
            color: white;
        }
    </style>
</head>
<body>
    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TruckId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TrailerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintainDes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaintainPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mdate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MTechnician)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TruckId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrailerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaintainDes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MaintainPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MTechnician)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaintainID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaintainID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaintainID })
                </td>
            </tr>
        }

    </table>
